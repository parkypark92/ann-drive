extends layout 

block content 
  h1.text-center.mb-4=title
  div.d-flex.flex-column.align-items-center
    if(messages)
      .alert.alert-danger 
        p=messages[0]
    form(method="POST")
      .mb-3 
        label.form-label(for="username") Username
        input#username.form-control(type="text" name="username" required) 
      .mb-3 
        label.form-label(for="password") Password
        input#password.form-control(type="password" name="password" required)
      button.btn.btn-primary.me-3(type="submit") Sign In
      a.btn.btn-primary(href="/") Home